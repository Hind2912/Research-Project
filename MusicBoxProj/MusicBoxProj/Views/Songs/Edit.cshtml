@model MusicBoxProj.ViewModel.SongEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SongId" />
            <div class="form-group">
                <label asp-for="SongName" class="control-label"></label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="AlbumName" class="control-label"></label>
                <select asp-for="AlbumId" class="form-control" asp-items="Model.AlbumSelectList"></select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="BandName" class="control-label"></label>
                <select asp-for="BandId" class="form-control" asp-items="Model.BandSelectList"></select>
                <span asp-validation-for="BandId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SongDuration" class="control-label"></label>
                <input asp-for="SongDuration" class="form-control" />
                <span asp-validation-for="SongDuration" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SongFilePath" class="control-label"></label>
                <input asp-for="SongFilePath" class="form-control" />
                <span asp-validation-for="SongFilePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
