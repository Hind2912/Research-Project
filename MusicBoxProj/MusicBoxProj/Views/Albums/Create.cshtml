@model MusicBoxProj.ViewModel.AlbumCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AlbumName" class="control-label">Album Name</label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="BandId" class="control-label">Bands</label>
                <div class="d-flex">
                    <select asp-for="BandId" class="form-control" asp-items="Model.BandSelectList"></select>
                    <a href="/Bands/Create/" class="btn btn-secondary ml-2">Click here to make a band</a>
                </div>
            </div>
            <div class="form-group mt-3">
                <label asp-for="GenreName" class="control-label">Genre Name</label>
                <select asp-for="GenresIds" class="form-control" asp-items="Model.GenreSelectList" multiple></select>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
