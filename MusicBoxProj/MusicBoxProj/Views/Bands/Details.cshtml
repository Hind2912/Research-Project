@model MusicBoxProj.ViewModel.BandDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Band</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BandName)
        </dd>
    </dl>
    <h4>Albums</h4>
    <ul class="row">
        @foreach (var s in Model.Albums)
        {
            <li>@s.AlbumName</li>

        }

    </ul>
    <h4>Songs</h4>
    <ul class="row">
        @foreach (var s in Model.Songs)
        {
            <li>@s.SongName</li>

        }

    </ul>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BandId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
