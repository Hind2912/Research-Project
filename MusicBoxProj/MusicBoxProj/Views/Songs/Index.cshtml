@model IEnumerable<MusicBoxProj.Models.Song>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div>
    <nav class="navbar bg-light">
        <div class="container-fluid">
            <form asp-controller="Songs" asp-action="Index" method="get">
                Search by Name: <input type="text" name="searchString" />
                <input type="submit" value="Filter" />
            </form>
        </div>
    </nav>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Band)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongFilePath)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Band.BandName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SongDuration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SongFilePath)
                   
                    <audio controls>
                        <source src="@item.SongFilePath" type="audio/mp3">
                        <source src="@item.SongFilePath" type="audio/ogg">
                        Your browser does not support the audio element.
                    </audio>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SongId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SongId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SongId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
