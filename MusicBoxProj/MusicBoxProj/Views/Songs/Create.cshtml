@model MusicBoxProj.Models.Song

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongName" class="control-label">Song Name</label>
                <input asp-for="SongName" class="form-control" />
                <span asp-validation-for="SongName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="AlbumId" class="control-label">Album Name</label>
                <div class="d-flex">
                <select asp-for="AlbumId" class="form-control" asp-items="ViewBag.AlbumId"></select>
                <a href="/Albums/Create/" class="btn btn-secondary ml-2">Click here to make an Album</a>
                </div>


            </div>
            <div class="form-group mt-3">
                <label asp-for="BandId" class="control-label">Band Name</label>
                <div class="d-flex">
                <select asp-for="BandId" class="form-control" asp-items="ViewBag.BandId"></select>
                <a href="/Bands/Create/" class="btn btn-secondary ml-2">Click here to make a band</a>
                </div>
            </div>


            <div class="form-group mt-3">
                <label asp-for="SongFilePath" class="control-label">Youtube URL</label>
                <input asp-for="SongFilePath" class="form-control" />
                <span asp-validation-for="SongFilePath" class="text-danger "></span>
            </div>
            <div class="form-group ">
                <input type="submit" value="Create" class="btn btn-primary mt-3" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
