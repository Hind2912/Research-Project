@model MusicBoxProj.ViewModel.AlbumEditVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AlbumId" />
            <div class="form-group mt-3">
                <label asp-for="AlbumName" class="control-label">Album Name</label>
                <input asp-for="AlbumName" class="form-control" />
                <span asp-validation-for="AlbumName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="ReleaseDate" class="control-label">Release Date</label>
                <input asp-for="ReleaseDate" class="form-control" asp-format="{0:MM/dd/yyyy}" value="@Model.ReleaseDate.ToString("MM/dd/yyyy")" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>



            <div class="form-group mt-3">
                <label asp-for="BandName" class="control-label">Band Name</label>
                <select asp-for="BandId" class="form-control" asp-items="Model.BandSelectList"></select>
                <span asp-validation-for="BandId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="GenreName" class="control-label">Genre Names</label>
                <select multiple asp-for="GenreIds" class="form-control" asp-items="Model.GenreSelectList"></select>
                <span asp-validation-for="GenreIds" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="SongIds" class="control-label">Song Names</label>
                <select multiple asp-for="SongIds" class="form-control" asp-items="Model.SongSelectList"></select>
                <span asp-validation-for="SongIds" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary " />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
