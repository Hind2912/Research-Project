@model MusicBoxProj.ViewModel.GenreDetailsVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Genre Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GenreName)
        </dd>
    </dl>
     <h4>Albums</h4>
    <ul class="row">
        @foreach (var g in Model.Albums)
        {
            <li>
                <a href="/Albums/Details/@g.AlbumId">@g.AlbumName</a>
            </li>
        }

    </ul>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GenreId">Edit</a> |
    <a asp-action="Index">Go to the Genres page</a>
</div>
